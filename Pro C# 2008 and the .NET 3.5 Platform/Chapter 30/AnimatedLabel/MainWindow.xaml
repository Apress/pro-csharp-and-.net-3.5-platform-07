<Window x:Class="AnimatedLabel.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AnimatedLabel" Height="498" Width="530" WindowStartupLocation="CenterScreen" >
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="166*" />
      <RowDefinition Height="175*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="249*" />
      <ColumnDefinition Width="260*" />
    </Grid.ColumnDefinitions>

    <Button Grid.Column ="0" Grid.Row ="0" Content ="Animate Height" Click ="btnAnimatelblMessage_Click" Height="40" Width="200"/>
    <Label Grid.Column ="1" Grid.Row ="0" Name ="lblHeight"  BorderBrush ="Black" BorderThickness ="1" Content ="Animate Height!" Height="40" Width ="100" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
    <Button Grid.Column ="0" Grid.Row ="1" Content ="Animate Transparency" Click ="btnAnimatelblTransparency_Click" Height="40" Width="200"/>
    <Label Background ="Cornsilk" Grid.Column ="1" Grid.Row ="1" Name ="lblTransparency"  BorderBrush ="Black" BorderThickness ="1" Content ="Animate Transparency!" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="40" Width ="140" />

  </Grid>
</Window>
